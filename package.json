{
  "name": "van-planner",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run start:dev --filter=api",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test -c apps/web/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui -c apps/web/playwright.config.ts",
    "postinstall": "node -e \"try { require('fs').copyFileSync('.env', 'apps/api/prisma/.env'); } catch(e) { console.log('No root .env found, skipping copy'); }\"",
    "dev": "pnpm --filter @2dvan/api dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "prisma": "^6.16.3"
  }
}