--------------------- LANCER FRONTEND & BACKEND -------------------------

pnpm --filter api run start:dev					// Lancer backend

Remove-Item -Recurse -Force .\apps\api\dist		// Supprimer rép dist
rmdir /s /q .\apps\api\dist						// Supprimer rep dist ... commande sous Windows

pnpm --filter web run dev						// Lancer frontend

------------------------ COMMIT FILES TO GIT ----------------------------


git status										// Check if your folder is a Git repository

git add .										// Add all files to staging

git commit -m "xxxxx"							// Make a commit --> replace xxx by commit desc

git push										// Push to GitHub


